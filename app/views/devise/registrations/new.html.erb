<section>

  <div class="col-12 min-vh-100 text-center d-flex flex-column justify-content-center bg-image" style="background-image: url('https://images.pexels.com/photos/5709299/pexels-photo-5709299.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260'); background-repeat: none; background-size: cover;" >
     
    <div class="align-self-center p-5 bg-image rounded-3" style="background-image: url('https://images.unsplash.com/photo-1616410731303-6affae095a0a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=645&q=80');">
          <div>
            <%= image_tag("Logo_cagette_3.png", :alt => "logo_cagette_du_net", :class => "pb-3") %>
            <h2 class="fw-bold fs-3">Créer un compte</h2>
            <p><small>Vous avez déjà un compte ?<br><%=link_to 'Se connecter', new_user_session_path, class:"text-dark"%></small></p>

            <div class="form-group" style="width: 300px">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-text pb-2">
                    <% f.label :email %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-sm", placeholder:"Entrez email" %>
                  </div>

                  <div class="form-text pb-2">
                    <% f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> lettres minimum)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-sm", placeholder:"Entrez mot de passe" %>
                  </div>

                  <div class="field">
                    <% f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-sm mb-2", placeholder:"Confirmer mot de passe" %>
                  </div>

                  <div class="actions my-1">
                    <%= f.submit "Créer un compte", class:"btn btn-dark w-100" %>
                  </div>
                  <%= render "devise/shared/links" %>
                <% end %>
          </div>
    </div>
    
  </div>

</section>