
<% if @cart.baskets.length != 0 && @cart.step == 0%>
  <% @cart = current_user_cart %>
  <% @cart.step = 1 %>
  <% @cart.save %>

  window.scroll({top: 0});
  document.getElementById("order-area").innerHTML ="<%= j render 'orders/first_step_ap'%>";
<% elsif @cart.baskets.length == 0%>
  alert("Veuillez sélectionner un panier pour pouvoir passer à l'étape suivante");

<% else %>
  window.scroll({top: 0});
  document.getElementById("order-area").innerHTML ="<%= j render 'orders/first_step_ap'%>";
<% end %>