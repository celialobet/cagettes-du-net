<h2>Partial Jumbotron to add</h2>

<!-- The three steps to order a basket-->
  <div class="container">
    <h1>Les étapes pour simplement commander un panier de produits locaux </h1>

    <div class="row">
      
      <div class="col-md-4">
        <h2><%= 1 %></h2>
        <p> Choisissez un de nos paniers </p>
      </div>

    
      <div class="col-md-4">
        <h2><%= 2 %></h2>
        <p> Sélectionner un lieu de livraison ou créez-en un  </p>
      </div>

    
      <div class="col-md-4">
        <h2><%= 3 %></h2>
        <p> Récupérez votre panier au lieu et à l'horaire choisis </p>
      </div>
      
    </div>
  </div>  

  <section class="container p-3">
<hr>
  <div class="container">
  <h2 class="text-center py-3">Nos paniers du moment</h2>
    <div class="row justify-content-center">
      <div class="card-group">
      <% @baskets.each do |basket|%>
        <div class="col mx-5">
          <div class="card" style="18rem;">
          <h3>Image to add</h3>
            <!-- <%= image_tag rand_item.image_url, alt: 'photo de chat', class: 'card-img-top' %> -->
            <div class="card-body">
              <h4 class="card-title"><%= basket.title %></h4>
              <p class="card-text"><%= basket.description %></p>
              <!-- <%= link_to "Accéder à la photo", item_path(item.id), class:"btn btn-warning" %>  
              <%= link_to "Ajouter au panier", item_selections_path(item), class:"btn btn-info", method:"POST", remote:true %> -->
            </div>
          </div>
        </div>
        
        <% end %>
        

        
      </div>
    </div>
  </div>
</section>    

  <div class="container">
    <h1>Nos paniers du moment</h1>
    <div class="row">
      <% @baskets.each do |basket| %>
        <div class="col-md-4">
          <h2><%= basket.title %></h2>
          <p>/image to add</p>
          <p> <%= basket.description %> </p>
          <p> <%= basket.price %>€</p>
          <a href="#">Voir tous les lieux</a>
          <!-- <%= link_to "Ajouter au panier", item_selections_path(item), class:"btn btn-info", method:"POST", remote:true %>  -->
        </div>
      <% end %> 
    </div>
    <hr>
  </div>

  <div class="container ">
    <h2 class="text-center py-3">Nos lieux de livraison</h2>
    <div class="card">
      
      <% @locations.adress_city.each do |city| %>
        <div class="row">
          <div class="col-md-8"> 
          <h5><%= city.name </h5>%>
        </div> 
        <div class="col-md-4">
          <a href="#">Voir tous les lieux</a>
          <!-- Maybe with AJAX
          <%= link_to "Voir tous les lieux", item_path(item.id), class:"btn btn-warning" %> --> 
        </div>
      <% end %>
    </div>
  </div>