<section class="container py-4">
  <h2 class=" fw-bold text-dark py-5">Nos produits du moment</h2>
  <div class="row row-cols-1 row-cols-lg-12 g-4" >
    <div class="card-group">
      <% @stars.each do |product|%>
        <% if product.is_available == true%>
          <div class="col">
            <div class="card rounded shadow h-100 text-decoration-none text-dark border-0 m-2">
              <div class="bg-image" style="background-image: url('<%= rails_blob_url(product.image_url) %>'); height: 10rem; max-width: auto; background-size: cover; background-position: center;">
              </div>
              <div class="card-body mx-2">
                <h5 class="card-title text-dark fw-bold"><%= product.title %></h5>
                <small><p class="card-text text-dark, text-muted"><%= product.description%></p></small>
              </div>
              <div class="d-flex justify-content-between align-items-center mx-4 pt-0 pb-4">
                <p class="d-inline pt-3 fs-5 text-dark"> <%= product.price %>â‚¬</p>
                <% if user_signed_in? %>
                  <%= link_to additional_product_selections_path(product), method:"POST", remote: true do %>
                  <div class="d-inline bg-dark text-white p-3">
                    <i class="fas fa-shopping-cart"></i> 
                  </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>