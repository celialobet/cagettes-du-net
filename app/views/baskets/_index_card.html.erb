<section class="container p-3 my-5">
  
  <div class="container my-5">
    <h2 class="text-center py-3">Nos paniers du moment</h2>
    <div class="row justify-content-center">
      <div class="card-group mt-5">
        <% @baskets.each do |basket|%>
        <div class="col mx-2">
          <div class="card rounded shadow" style="18rem;">
            
            <%= image_tag basket.image_url, alt: 'photo de panier', class: 'card-img-top' %>
            <div class="card-body">
              <h4 class="card-title"><%= basket.title %></h4>
              <p class="card-text"><%= truncate(basket.description, length: 100, omission: "... %s") % link_to('Afficher la suite', basket_path(basket.id))%></p>
              <p class="text-center"> <%= basket.price %>â‚¬</p>
              <div class="add-buttons text-center">
                <%= link_to "Page du produit", basket_path(basket.id), class:"btn btn-success"%>
              </div>
            </div>
            <div class="card-footer">
            <% if user_signed_in? %>
              <div class="add-buttons text-center">
                <%= link_to "Ajouter au panier", basket_selections_path(basket), class:"btn btn-warning", method:"POST", remote: true %>
              </div>
            <% end %>   
            </div>
          </div>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</section>