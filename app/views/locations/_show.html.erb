<div class="jumbotron2 row align-items-center">
  <div class="container col-8"  >
    <h1 class="display-2 fw-bold text-primary "><%= @location.name %></h1>            
      <ul class="mt-3 list-inline fs-5">
       <li class="list-inline-item">
          <i class="fas fa-map-marker-alt"></i> <%= @location.address_number %> <%= @location.address_street %> <%= @location.zip_code %>
        </li> 
      </ul>   
  </div>
</div>
<div class="container my-3">
  <%= render 'orders/jumbotron' %>
</div>
  <section class="container col-8 py-5" > 
    <div class="row">
      <div class="col-8">
            <h2 class="card-title text-dark  py-3 fw-bold">A propos</h2>
            <p class="card-text pb-3"><%= @location.description %></p>
            <h2 class="card-title text-dark py-3 fw-bold">Location</h2>
            <div class="mapouter">
              <div class="gmap_canvas">
                <iframe width="755" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=<%=@location.address_number%>%20<%=@location.address_street%>%20<%=@location.address_city%>%20<%=@location.zip_code%>%20France&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                <a href="https://embedgooglemap.net/131/">might</a>
              </div>
                <style>.mapouter{position:relative;text-align:right;height:700px;width:755px;}.gmap_canvas {overflow:hidden;background:none!important;height:400px;width:755px;}</style>
            </div>
      </div>
      <div class="col-4">
        <div class="card shadow border-0 justify-content-center px-3">
          <div class="card-body">
            <ul class="mt-3 list-inline fs-5">
              <li class="list-inline-item">
                <h5 class="fw-bold">Détails de livraison</h5>
              </li>
            </ul>
            <ul>
              <li class="list-inline-item">
                <i class="fas fa-truck"></i> Livré les <%= @location.day %>s  
              </li>
            </ul>
            <ul>
              <li class="list-inline-item">
                <i class="fas fa-arrow-circle-right"></i> A partir de <%= @location.time %>
              </li>
            </ul>
            <ul>
              <li class="list-inline-item ">
                <i class="far fa-clock mr-1"></i> <%= @location.opening_hours %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>   
  </section>

  <div class="container row" >
      
      <% if @location.id == current_user.location_id %>
        <div class="col-6"><%=link_to 'Valider le lieu de livraison', cart_path(current_user.cart), class:'btn btn-dark rounded', remote: true %>
        </div>
        <div class="col-6"><%=link_to 'Retourner à la liste des lieux de livraison', locations_path, class:'btn btn-dark rounded', remote: true %>
        </div>
      
      <% else %>
        <div class="col-6"><%=link_to 'En faire votre lieu de livraison', location_path(@location.id), class:'btn btn-dark rounded', remote: true %>
        </div>
        <div class="col-6"><%=link_to 'Changer de lieu de livraison', locations_path, class:'btn btn-dark rounded', remote: true %>
        </div>
      <% end %>
        
    </div>