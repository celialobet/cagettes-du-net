<div class="jumbotron-location row align-items-center">
  <div class="container col-8"  >
    <h1 class="display-2 fw-bold text-white "><%= @location.name %></h1>            
    <ul class="mt-3 list-inline fs-5">
      <li class="list-inline-item text-light">
        <p><%= @location.address_number %> <%= @location.address_street %>, <%= @location.zip_code %> - PARIS</p>
      </li>
    </ul>
  </div>
</div>
<section class="container col-8 py-5" > 
  <div class="row">
    <div class="col-lg-8 col-12 order-lg-2 order-sm-2">
      <div class="card border-0 mx-0">
        <div class="card-body">
          <h3 class="card-title text-dark py-3 fw-bold">À propos</h3>
          <p class="card-text pb-3"><%= @location.description %></p>
          <hr>
          <h3 class="card-title text-dark py-3 fw-bold">Location</h3>
          <div class="mapouter">
            <div class="gmap_canvas w-100">
              <iframe width="100%" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=<%=@location.address_number%>%20<%=@location.address_street%>%20<%=@location.address_city%>%20<%=@location.zip_code%>%20France&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
              <a href="https://embedgooglemap.net/131/"></a>
            </div class="w-100">
              <style>.mapouter{}.gmap_canvas {overflow:hidden;background:none!important;}</style>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-12 order-lg-2 order-sm-1 py-sm-4">
      <div class="card shadow border-0 p-4 pt-0">
        <div class="card-body justify-content-center">
        <h3 class="card-title text-dark fw-bold py-3">Détails de livraison</h3>
          <ul class="mt-3 list-group list-group-flush ">
            <li class="list-group-item border-0 px-0 ">
              <p><i class="fas fa-truck"></i> Livré les <%= @location.day %>s </p> 
            </li>
            <li class="list-group-item border-0 px-0">
              <p><i class="fas fa-arrow-circle-right"></i>À partir de <%= @location.time%>h</p>
            </li>
            <li class="list-group-item border-0 px-0">
              <p><i class="far fa-clock mr-1"></i>  <%= @location.opening_hours %></p>
            </li>
          </ul>
        </div>
        <% if user_signed_in? %>
          <% if @location.id == current_user.location_id %>
            <%=link_to 'Changer de lieu de livraison', locations_path, class:'btn btn-dark mt-0' %>
          <% else %>
            <%=link_to 'En faire votre lieu de livraison', user_path(current_user, location_id: @location.id), class:'btn btn-dark mt-0', method: "PUT" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>   
</section>